#include <avr/io.h>
#include <util/delay.h>
int main(void)
{
    DDRB |= (1<<PB7);
    DDRB |= (1<<PB6);
    DDRF &= ~(1<<PF2);

    PORTB &= ~(1<<PB7);
    PORTB &= ~(1<<PB6);
    while(1)
    {
        int knop_ingedrukt = 0;
        if ((PINF & (1<<PF2)) == 0)
        {
            _delay_ms(20);
            if(knop_ingedrukt == 0)
            {
                knop_ingedrukt = 1;
                PORTB |= (1<<PB6);
            }
        }
        else
        {
            _delay_ms(20);
            knop_ingedrukt = 0;
        }
    }

    return 0;
}
